{
  "name": "@codersparks-home-assistant/sky-q-lib",
  "version": "0.0.1",
  "description": "An ssdp client that allows the querying of network resources using UPnP",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "debug": "cat ~/.npmrc",
    "clean": "rimraf dist",
    "transpile": "tsc",
    "test": "echo 'WARNING: No test configured'",
    "commit": "git add -A && git-cz",
    "build": "npm run lint && npm run transpile",
    "lint": "eslint src/**",
    "prettier:check": "prettier --check 'src/**/*.{js,ts}'",
    "validate": "run-s test lint prettier:check",
    "prerelease": "git checkout main && git pull origin main && npm i && run-s validate && git-authors-cli && git add .",
    "release": "standard-version -a",
    "postrelease": "run-s release:*",
    "release:tags": "git push --follow-tags origin main",
    "ci:validate": "rm -rf node_modules && npm install && npm run validate",
    "prepublishOnly": "npm run ci:validate && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codersparks-home-assistant/sky-q-lib.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "codersparks <codersparks@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codersparks-home-assistant/sky-q-lib/issues"
  },
  "homepage": "https://github.com/codersparks-home-assistant/sky-q-lib#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@tsconfig/node12": "^1.0.7",
    "@types/node-fetch": "^2.5.7",
    "@types/xmldom": "^0.1.30",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "commitizen": "^4.2.2",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.13.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "git-authors-cli": "^1.0.31",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@codersparks-home-assistant/ssdp-client": "^0.0.28",
    "log4js": "^6.3.0",
    "node-fetch": "^2.6.1",
    "xmldom": "^0.4.0",
    "xpath": "^0.0.32"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "contributors": [
    "codersparks <codersparks@gmail.com>"
  ]
}
